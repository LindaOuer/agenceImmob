{% extends 'base.html.twig' %}

{% block title %}AdminProperty {% endblock %}

{% block body %}
<div class="container">
    <h1>Gerer les properties</h1>
    <table class="table table-stripped">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for p in properties %}
                <tr>
                    <td>{{ p.title }} </td>
                    <td> <a href="{{ path('admin_property_update', {'id': p.id}) }} "> Update </a> </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
